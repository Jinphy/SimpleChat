<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.jinphy.simplechat.modules.group.group_list.GroupListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/bottom_view"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <android.support.v7.widget.CardView
            android:id="@+id/remove_members"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/btn_remove_members"
                android:text="移除成员"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/color_red_D50000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/build_new_group"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/btn_build_new_group"
                android:text="新建群聊"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/green_primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/select_all_view"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/btn_select_all_view"
                android:text="全选"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/green_primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
