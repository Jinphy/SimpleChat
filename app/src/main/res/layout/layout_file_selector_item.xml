<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/dimen_1dp"
    app:cardCornerRadius="@dimen/dimen_3dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dimen_5dp"
    android:layout_marginRight="@dimen/dimen_5dp"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:layout_marginBottom="@dimen/dimen_2dp"
    android:layout_height="65dp">

    <RelativeLayout
        android:background="@drawable/btn_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_view"
            android:src="@drawable/ic_folder_24dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"/>

        <TextView
            android:id="@+id/name_view"
            android:layout_toRightOf="@id/icon_view"
            android:layout_marginLeft="@dimen/dimen_10dp"
            tools:text="test.mp3"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:layout_width="150dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/size_view"
            android:layout_toRightOf="@id/icon_view"
            android:layout_below="@id/name_view"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_3dp"
            tools:text="5.67 MB"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_box"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>