<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_10dp"
    app:cardElevation="@dimen/dimen_50dp"
    android:layout_width="250dp"
    android:layout_height="250dp">




    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/record_audio_layout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dimen_30dp"
                android:id="@+id/icon_voice"
                android:src="@drawable/ic_record_voice_24dp"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"/>

            <TextView
                android:id="@+id/time_view"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="wrap_content"
                tools:text="00:30:13"
                android:textColor="@color/half_alpha_gray"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cancel_layout"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FF3A8108"
            android:alpha="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="@dimen/dimen_30dp"
                android:id="@+id/icon_cancel"
                android:src="@drawable/ic_cancel_record_audio_24dp"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"/>

            <TextView
                android:id="@+id/hint_view"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="wrap_content"
                android:text="松手取消！"
                android:textColor="@color/half_alpha_gray"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>