<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jinphy.simplechat.modules.modify_user_info.ModifyUserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--avatar-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_avatar_name"
                app:icon_drawable="@drawable/pic_1"
                app:icon_color="#00000000"
                app:icon_size="90dp"
                app:show_input="false"
                app:show_arrow="false"
                app:auto_animate="false"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"/>

            <!--account-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_account"
                app:title="账号"
                app:show_arrow="false"
                app:show_input="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_self_close_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--name-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_remark"
                app:title="备注"
                app:content_hint="请输入备注信息"
                app:icon_drawable="@drawable/ic_remark_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--status-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_status"
                app:title="状态"
                app:show_input="false"
                app:show_arrow="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_star_half_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--signature-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_signature"
                app:title="个性签名"
                app:content_hint="暂无个性签名"
                app:show_input="false"
                app:show_arrow="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_signature_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--date-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_date"
                app:title="好友日"
                app:content_hint="还不是好友"
                app:show_input="false"
                app:auto_animate="false"
                app:show_arrow="false"
                app:icon_drawable="@drawable/ic_schedule_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--sex-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_sex"
                app:title="性别"
                app:content_hint="暂无填写性别信息"
                app:show_input="false"
                app:show_arrow="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_flower_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--address-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_address"
                app:title="地址"
                app:content_hint="暂无填写地址信息"
                app:show_input="false"
                app:show_arrow="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_address_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/btn_refuse"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/refuse"
                android:text="拒绝"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/color_red_D50000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/btn_agree"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/agree"
                android:text="同意"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/green_primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/btn_delete"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/delete"
                android:text="删除"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/color_red_D50000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_black_list"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/black_list"
                android:text="拉黑"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_send_msg"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/send_msg"
                android:text="聊天"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/green_primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>
