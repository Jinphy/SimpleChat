<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jinphy.simplechat.modules.modify_user_info.ModifyUserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:minHeight="200dp"
            android:layout_height="wrap_content">

            <!--avatar-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_avatar"
                app:icon_drawable="@drawable/ic_group_chat_24dp"
                app:icon_color="#00000000"
                app:icon_size="90dp"
                app:show_input="false"
                app:content_hint="更换头像"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"/>

            <!--account-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_name"
                app:title="群名"
                app:content_hint="修改名称"
                app:icon_drawable="@drawable/ic_smile_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--name-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_group_no"
                app:title="群号"
                app:show_input="false"
                app:auto_animate="false"
                app:show_arrow="false"
                app:icon_drawable="@drawable/ic_self_close_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--status-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_creator"
                app:title="群主"
                app:show_input="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_person_48dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_members"
                app:title="群成员"
                app:content_hint="点击查看"
                app:show_input="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_group_chat_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>


            <!--signature-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_max_count"
                app:title="最大成员数"
                app:show_input="false"
                app:show_arrow="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_max_count_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--date-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_auto_add"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                app:auto_animate="false"
                app:icon_color="@color/green_primary"
                app:icon_drawable="@drawable/ic_add_circle_24dp"
                app:show_arrow="false"
                app:show_input="false"
                app:title="入群方式"/>

            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_extra_msg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:icon_color="@color/green_primary"
                app:icon_drawable="@drawable/ic_remark_24dp"
                app:content_hint="请输入验证信息"
                app:title="验证信息"/>


            <!--sex-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_show_member_name"
                app:title="显示成员名"
                app:show_input="false"
                app:icon_drawable="@drawable/ic_star_half_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--address-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_keep_silent"
                app:title="消息免打扰"
                app:show_input="false"
                app:icon_drawable="@drawable/ic_keep_silent_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>


            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_reject_msg"
                app:title="屏蔽该群"
                app:show_input="false"
                app:icon_drawable="@drawable/ic_reject_msg_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:id="@+id/btn_break_group"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/break_group"
                android:text="解散群聊"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/color_red_D50000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_exit_group"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/exit_group"
                android:text="退出群聊"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/color_red_D50000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_chat"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/chat"
                android:text="马上聊天"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/green_primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_add_group"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/add_group"
                android:text="申请加入"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/green_primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_delete_local"
            app:cardCornerRadius="@dimen/dimen_5dp"
            app:cardElevation="@dimen/dimen_1dp"
            tools:visibility="visible"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp">

            <TextView
                android:id="@+id/delete_local"
                android:text="删除"
                android:gravity="center"
                android:background="@drawable/btn_alpha"
                android:clickable="true"
                android:textColor="@color/color_red_D50000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>
