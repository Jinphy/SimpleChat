<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.jinphy.simplechat.modules.system_msg.SystemMsgFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/item_new_friend"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_12dp"
            android:gravity="center_vertical"
            android:background="@drawable/btn_alpha"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_new_friend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_person_add_green_24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/title_new_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:maxLines="1"
                android:text="新朋友"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:id="@+id/item_notice"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_12dp"
            android:background="@drawable/btn_alpha"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_notice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_message_24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/title_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:maxLines="1"
                android:text="公告"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
