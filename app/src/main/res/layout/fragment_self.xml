<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jinphy.simplechat.modules.main.self.SelfFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_marginTop="@dimen/tool_bar_height"
        android:layout_marginBottom="@dimen/tool_bar_height"
        android:overScrollMode="never"
        android:translationY="244dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:minHeight="490dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/menu_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:textSize="@dimen/dimen_16dp"
                    android:text="修改用户信息"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:clickable="true"
                    android:elevation="@dimen/dimen_1dp"
                    android:background="@drawable/ic_white_rectangle_background"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"/>

                <TextView
                    android:textSize="@dimen/dimen_16dp"
                    android:text="关于简聊"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:clickable="true"
                    android:elevation="@dimen/dimen_1dp"
                    android:background="@drawable/ic_white_rectangle_background"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"/>



            </LinearLayout>

            <TextView
                android:id="@+id/btn_logout"
                android:textSize="@dimen/dimen_15dp"
                android:textColor="@color/color_red_D50000"
                android:gravity="center"
                android:text="退出当前账号"
                android:clickable="true"
                android:elevation="@dimen/dimen_1dp"
                android:background="@drawable/ic_white_rectangle_background"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="@dimen/dimen_50dp"/>

        </LinearLayout>
    </ScrollView>


    <android.support.v7.widget.CardView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/dimen_6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/blur_background"
                tools:src="@drawable/pic_1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:elevation="@dimen/dimen_10dp"
                android:src="@drawable/ic_person_48dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/dimen_3dp"
                tools:ignore="VectorDrawableCompat"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:gravity="center"
                android:text="未登录"
                android:textColor="#9fffffff"
                android:textSize="@dimen/size_18sp"/>

            <ImageView
                android:id="@+id/sex"
                android:layout_toRightOf="@id/name"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginBottom="19dp"
                android:src="@drawable/ic_female"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_12dp"
                android:gravity="center"
                android:text="2017-8-12"
                android:textColor="#9fffffff"
                android:textSize="@dimen/size_15sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
