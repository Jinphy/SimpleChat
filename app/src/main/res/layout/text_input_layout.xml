<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/input_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_30dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_text"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/verification_code_button"
            android:text="@string/get_verification_code"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:background="@drawable/verification_code_button_background"
            android:textColor="@color/white"
            android:elevation="@dimen/dimen_3dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="90dp"
            android:layout_height="35dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/verify_successfully_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/ic_certificates_24dp"
            android:tint="#AEEA00"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已通过验证！"/>
    </LinearLayout>


</LinearLayout>


