<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_7dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/dimen_1dp"
    android:clickable="true"
    android:layout_width="120dp"
    android:layout_height="120dp">

    <RelativeLayout
        android:id="@+id/click_view"
        android:background="@drawable/btn_alpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_view"
            tools:src="@drawable/ic_person_48dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            app:civ_border_width="@dimen/dimen_0dp"
            app:civ_fill_color="@color/half_alpha_gray"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/check_view"
            android:src="@drawable/ic_checked_24dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            app:civ_border_width="@dimen/dimen_0dp"
            app:civ_fill_color="#6f000000"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_70dp"/>


        <TextView
            android:id="@+id/name_view"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_5dp"
            tools:text="@string/routine_weather"
            android:layout_width="100dp"
            android:layout_height="20dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
