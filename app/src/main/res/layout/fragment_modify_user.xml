<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jinphy.simplechat.modules.modify_user_info.ModifyUserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--avatar-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_avatar"
                app:content_hint="更换头像"
                app:icon_drawable="@drawable/pic_1"
                app:show_input="false"
                app:icon_color="#00000000"
                app:icon_size="90dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <!--account-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_account"
                app:title="账号"
                app:show_arrow="false"
                app:show_input="false"
                app:auto_animate="false"
                app:icon_drawable="@drawable/ic_self_close_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--name-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_name"
                app:title="昵称"
                app:content_hint="请输入您的昵称"
                app:icon_drawable="@drawable/ic_smile_red_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--status-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_status"
                app:title="登录状态"
                app:show_input="false"
                app:show_arrow="false"
                app:auto_animate="false"
                app:content_hint="请输入内容"
                app:icon_drawable="@drawable/ic_star_half_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--signature-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_signature"
                app:title="个性签名"
                app:content_hint="展示独特的你"
                app:icon_drawable="@drawable/ic_signature_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--password-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_password"
                app:title="密码"
                app:auto_animate="false"
                app:content_hint="请输入密码"
                app:content="12fjdaifiji"
                app:content_type="password"
                app:icon_drawable="@drawable/ic_lock_outline_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--date-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_date"
                app:title="注册时间"
                app:show_input="false"
                app:auto_animate="false"
                app:show_arrow="false"
                app:icon_drawable="@drawable/ic_schedule_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--sex-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_sex"
                app:title="性别"
                app:content_hint="请选择性别"
                app:show_input="false"
                app:icon_drawable="@drawable/ic_flower_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <!--address-->
            <com.example.jinphy.simplechat.custom_view.MenuItemView
                android:id="@+id/item_address"
                app:title="地址"
                app:content_hint="请填写地址信息"
                app:icon_drawable="@drawable/ic_address_24dp"
                app:icon_color="@color/green_primary"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
